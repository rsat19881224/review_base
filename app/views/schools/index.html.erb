<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kana</th>
      <th>Email</th>
      <th>Post code</th>
      <th>Tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.kana %></td>
        <td><%= school.email %></td>
        <td><%= school.post_code %></td>
        <td><%= school.tel %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path, class:"btn btn-primary" %>
